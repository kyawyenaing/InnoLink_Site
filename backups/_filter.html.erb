<% if user_signed_in? %>
  <%= render(
    partial: 'jobs/joblists',
    locals: { jobs: @jobs }
  ) %>
<% else %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Post a job position or create your online resume by TheJobs!">
    <meta name="keywords" content="">

    <title>InnoLink Job Portal</title>

    <!-- Styles -->
    <link href="assets/app.min.css" rel="stylesheet">
    <link href="assets/custom.css" rel="stylesheet">

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,300,400,500,600,800%7COpen+Sans:300,400,500,600,700,800%7CMontserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="assets/apple-touch-icon.png">
    <link rel="icon" href="../assets/favicon.ico">
  </head>

  <body class="nav-on-header smart-nav">


  <!-- Main container -->
  <main>
    <!-- Recent jobs -->
    <section>
      <div class="container">

          <div class="row item-blocks-connected">

              <div class="col-md-8">

                  <div class="col-xs-12">

                      <header class="section-sub-header">

                          <span>Latest</span>
                          <h2>Recent jobs</h2>

                      </header>
                    <% @jobs.each do |job| %>
                      <a class="item-block" href="/jobs/<%= job.id %>">
                        <header>

                            <img src="assets/logo-google.jpg" alt="">                     
                          <div class="hgroup">

                            <h4><%= job.job_title %></h4>
                            <h5><%= job.company_name %></h5>
                          
                          </div>
                          
                          <div class="header-meta">

                            <span class="location">
                              <%= job.city.name %>
                            </span>
                            <span class="label label-success">
                              <%= job.status %>                            
                            </span>
                          
                          </div>
                          
                        </header>
                        
                      </a>
                      
                    <% end %>
                    
                  </div>

              </div>
              <div class="col-md-4">

                  <header class="section-sub-header">
                      <h2>Search by Salary</h2>
                  </header>

                  <div style="border: 1px solid #ddd; border-radius: 5px; padding: 20px 10px;">

                    <div class="form-group">

                      <select class="form-control ">
                        <option>Select a salary type</option>
                        <option>100,000 ~ 200,000</option>
                        <option>200,000 ~ 300,000</option>
                        <option>300,000 ~ 500,000</option>
                        <option>500,000 ~ 700,000</option>
                        <option>700,000 ~ 1,000,000</option>
                      </select>

                    </div>

                    <p class="text-center">
                      <a href="job-offer-list.html" class="btn btn-success">
                        Search
                      </a>
                    </p>

                  </div>

              </div>

          </div>

        <br><br>
        <p class="text-center">
          <a class="btn btn-info" href="job-list.html">
            View all jobs
          </a>
        </p>

      </div>

    </section>
    <!-- END Recent jobs -->


    <!-- Facts -->
    <section class="bg-img bg-repeat no-overlay section-sm" style="background-image: url(assets/Investment-Research.jpg);">
      <div style="height: 200px;"></div>
    </section>
    <!-- END Facts -->


    <!-- Categories -->
    <section class="bg-alt">

      <div class="container">

        <header class="section-header">

          <span>Categories</span>
          <h2>Popular categories</h2>
          <p>Here's the most popular categories</p>

        </header>

        <div class="category-grid">

          <a href="job-by-category.html">
            <i class="fa fa-laptop"></i>
            <h6>Technology</h6>
            <p>
              Designer, Developer, IT Service, Front-end developer, Project management
            </p>
          </a>

          <a href="job-by-category.html">
            <i class="fa fa-line-chart"></i>
            <h6>Accounting</h6>
            <p>
              Finance, Tax service, Payroll manager, Book keeper, Human resource
            </p>
          </a>

          <a href="job-by-category.html">
            <i class="fa fa-medkit"></i>
            <h6>Medical</h6>
            <p>
              Doctor, Nurse, Hospotal, Dental service, Massagist
            </p>
          </a>

          <a href="job-by-category.htmll">
            <i class="fa fa-cutlery"></i>
            <h6>Food</h6>
            <p>
              Restaurant, Food service, Coffe shop, Cashier, Waitress
            </p>
          </a>

          <a href="job-by-category.html">
            <i class="fa fa-newspaper-o"></i>
            <h6>Media</h6>
            <p>
              Journalism, Newspaper, Reporter, Writer, Cameraman
            </p>
          </a>

          <a href="job-by-category.html">
            <i class="fa fa-institution"></i>
            <h6>Government</h6>
            <p>
              Federal, Law, Human resource, Manager, Biologist
            </p>
          </a> 
        </div>

      </div>
    </section>
    <!-- END Categories -->


    <!-- Newsletter -->
    <section class="bg-img text-center" style="background-image: url(assets/bg-facts.jpg)">
      
      <div class="container">

        <h2>
          <strong>Subscribe</strong>
        </h2>
        <h6 class="font-alt">
          Get weekly top new jobs delivered to your inbox
        </h6>
        <br><br>

        <form class="form-subscribe" action="#">

          <div class="input-group">

            <input type="text" class="form-control input-lg" placeholder="Your eamil address">
            <span class="input-group-btn">
              <button class="btn btn-success btn-lg" type="submit">
                Subscribe
              </button>
            </span>

          </div>

        </form>

      </div>

    </section>
    <!-- END Newsletter -->
  </main>
  <!-- END Main container -->


