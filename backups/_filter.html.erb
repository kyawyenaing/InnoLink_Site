      <!-- END Top section -->

      <!-- Bottom section -->
      <div class="container">

        <div class="row">

          <div class="col-md-8 col-sm-6 col-xs-12">
            <p class="copyright-text">Copyrights &copy; 2016 All Rights Reserved by <a href="http://themeforest.net/user/shamsoft">Tech Myanmar</a>.</p>
