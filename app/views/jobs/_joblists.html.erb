
<!-- Main container -->
    <main>
      <section class="no-padding-top bg-alt">
        <div class="container">
        <div class="row">
          <div class="col-xs-6 text-right">             
            <%= paginate @jobs %>
          </div>
          <div class="col-xs-6 text-right">
            <br>
    <%= link_to "Add a job", new_job_path, :class=>"btn btn-primary btn-sm" %>
          </div>

          <% @jobs.each do |job| %>
          <!-- Job detail -->
          <div class="col-xs-12">
            <div class="item-block">
              <header>
                <a href="/jobs/<%= job.id %>">
                  <img src="../assets/logo-job.png" alt="" width="160">
                </a>
                <div class="hgroup">
                  <h4>
                  <a href="/jobs/<%= job.id %>">
                  <%= job.title  %>
                  </a> 
                  </h4>
                  <h5>
                    <%= job.company_name %>
                  </h5>
                  <% if job.user.id == current_user.id %>
                  <span class="glyphicon glyphicon-user">                    
                  </span>                              
                  <% end %>

                </div>
                <div class="header-meta">
                  <span class="location">                    
                    <%= job.city.name %>
                  </span>
                  <time datetime="2016-03-10 20:00">
                    <%= job.decorated_created_at %>
                  </time>
                </div>
              </header>
              <footer>
                <p class="status">
                  <strong>Status:</strong> 
                  Pending approval hahahaha
                </p>
                <div class="action-btn">
                <% if job.user_id==current_user %>
                <a href="/jobs/<%= job.id %>/edit" class="btn btn-xs btn-gray">
                  Edit
                  </a>
                <%= link_to 'Delete', {:action =>'destroy', :id => job.id}, 
                  :confirm =>'Are you sure?', :method =>:delete,:class=>'btn btn-xs btn-danger'
                  %>
                  <% end %>
                </div>
              </footer>
            </div>
          </div>        <!-- END Job detail -->
        <% end %>   
          <div class="col-xs-6 text-right">             
          <%= paginate @jobs %>
          </div>
        </div>
        </div>
      </section>
    </main>

<!-- END Main container -->

