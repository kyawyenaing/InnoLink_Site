<div class="container">
  <div class="row ">
    <!-- <div class="col-md-3"></div> -->
    <div class="col-md-6 col-md-offset-3 col-md-outset-3">
      <main>
        <div class="login-block-sm">
          <h1>Sign Up to MomoLayJob</h1>
        </div>
        <div class="login-block">     
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon">
              <i class="ti-email"></i></span>
          <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Your Email"%>
            </div>
          </div>            
          <hr class="hr-xs">

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="ti-unlock"></i></span>
              <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"Your Password"%>
            </div>
          </div>
          <hr class="hr-xs">

          <div class="form-group">
            <div class="input-group">
              <span class="input-group-addon"><i class="ti-unlock"></i></span>
              <%= f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"Confirm Your Password"%>
            </div>
          </div>
          <hr class="hr-xs">

                
          <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>
          <%= f.submit "Sign Up", :class=>"btn btn-primary btn-block" %>
          <% end %>
        </div>
      </main>
    </div>
    <!-- <div class="col-md-3"></div> -->
  </div>
</div>

