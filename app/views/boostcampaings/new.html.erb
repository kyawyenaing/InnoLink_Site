<section class="container page-name" style="width: 500px; margin: 0 auto;"> 
    <h2>Boost your job</h2>
    <%= simple_form_for [@job, @campaing] do |form| %>
   
    <div class="form-group">
        <%=
        form.input :job_id, :as => :hidden, :input_html => { :value => @job.id }
        %>
    </div>
    <div class="form-group">
        <p class="text-center">
          <%= form.input :start_date, 'data-behaviour' => 'datepicker' %>
        </p>
    </div>
    <div class="form-group">
        <p class="text-center">
          <%= form.input :end_date, 'data-behaviour' => 'datepicker' %>
        </p>
    </div>
    <div class="form-group">
        <%=
        form.input :total_budget , label: "Daily Amount ", placeholder:"Daily A:mount" 
        %>
    </div>
    <div class="form-group">
        <%= form.button :submit,class: "btn btn-success btn-sm" %>
    </div>
    <% end %>
</section>


<!-- END Page header -->
<!-- END Main container -->
