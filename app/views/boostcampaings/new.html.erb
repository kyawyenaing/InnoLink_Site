
<!-- Page header -->
<header class="page-header">
  <div class="container page-name">
    <h1 class="text-center">Add a new job</h1>
    <p class="lead text-center">
       Create a new vacancy for your company and put it online.
     </p>
    <a href="#" class="text-center block text-dark text-u-l">
     View your job offer list
   </a>
  <%= simple_form_for [@job, @campaing] do |form| %>
  <div class="container">
    <div class="row">
      <div class="form-group col-xs-6 col-sm-12">
        <%=
        form.input :job_id, :as => :hidden, :input_html => { :value => @job.id }
        %>
      </div>
      <div class="form-group col-xs-6 col-sm-12">
        <p class="text-center">
          <%= form.input :start_date, 'data-behaviour' => 'datepicker' %>
        </p>
      </div>
      <div class="form-group col-xs-6 col-sm-12">
        <p class="text-center">
          <%= form.input :end_date, 'data-behaviour' => 'datepicker' %>
        </p>
      </div>
      <div class="form-group col-xs-12 col-sm-6">
        <%=
        form.input :total_budget , label: "Daily Amount ", placeholder:"Daily Amount" 
        %>
      </div>

      <div class="form-group col-xs-6 col-sm-12">
        <p class="text-center">
          <%= form.button :submit,class: "btn btn-success btn-sm" %>
        </p>
      </div>

    </div>
  </div>
<% end %>
</header>
     <!-- END Page header -->
 <!-- END Main container -->
 <!-- Back to top button -->
<a id="scroll-up" href="#">
  <i class="ti-angle-up"></i>
</a>

