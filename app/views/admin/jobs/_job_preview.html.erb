<!-- Page header -->
    <header class="page-header m-b-none">      
      <div class="container page-name">
        <h1 class="text-center">Admin Panel To Manage All Activities</h1>
        <p class="lead text-center padder-bt-xxl">
          You are now logined by admin role. Now, you can manage all activities.
        </p>
      </div>
    </header>
<!-- END Page header -->
<!-- Main container -->
    <main>
      <section class="no-padding-top bg-alt">
        <div class="container">

          <div class="row">
              <div class="col-xs-3 text-center">
              <br>
                <a href="/admin/companies" class="btn btn-sm btn-primary">Manage Companies</a>
              </div>
              <div class="col-xs-3 text-center">
              <br>
                <a href="/admin/jobs" class="btn btn-sm btn-primary">Manage Jobs</a>
              </div>
              <div class="col-xs-3 text-center">
              <br>
                <a href="/admin/boostcampaings" class="btn btn-sm btn-primary">Manage Boost Campaings</a>
              </div>
              <div class="col-xs-3 text-center">
              <br>
                <a href="/admin/boosts" class="btn btn-sm btn-primary">Manage Boosts</a>
              </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">
            <h5>User Added Jobs</h5>
              <%= paginate @jobs %>                           
            </div>
          </div>
          <div class="row">
            <!-- company detail -->
              <% @jobs.each do |job| %>            
              <div class="col-xs-12">
                <div class="item-block">
                  <header>
                    <a href="/admin/jobs/<%= job.id %>">
                      <img src="../assets/logo-job.png" alt="" width="160">
                    </a>
                    <div class="hgroup">
                      <h4>
                      <a href="/admin/jobs/<%= job.id %>">
                      <%= job.title  %>
                      </a>                               
                      </h4>
                      <span class="glyphicon glyphicon-user"></span>           
                      <h5><%= job.company.name %></h5>
                    </div>
                    <div class="header-meta">
                      <span class="location">            
                        <%= job.city.name %>
                      </span>
                      <time datetime="2016-03-10 20:00">
                      Added at:
                        <%= job.decorated_created_at %>
                      </time>
                    </div>
                  </header>
                  <footer>
                    <p class="status">
                      <strong>Status:</strong> 
                      <%= job.status %>
                    </p>
                    <div class="action-btn">
                      <a href="/admin/jobs/<%= job.id %>/edit" class="btn btn-xs btn-gray btn-primary">Confirm</a>
                      <%= 
                      # link_to 'Delete', {:action =>'destroy', :id => job.id}, 
                      #   :confirm =>'Are you sure?', :method =>:delete,:class=>'btn btn-xs btn-danger'
                        %>
                    </div>                    
                  </footer>
                </div>
              </div>              
              <% end %> 
              <!-- END company detail --> 
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">           
              <%= paginate @jobs %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-12 text-center">
            <h5>User Edited Jobs</h5>
              <%= paginate @jobs %>                           
            </div>
          </div>
          <div class="row">
            <!-- company detail -->
              <% @edited_jobs.each do |edited_job| %>            
              <div class="col-xs-12">
                <div class="item-block">
                  <header>
                    <a href="/admin/jobs/<%= edited_job.id %>">
                      <img src="../assets/logo-job.png" alt="" width="160">
                    </a>
                    <div class="hgroup">
                      <h4>
                      <a href="/admin/jobs/<%= edited_job.id %>">
                      <%= edited_job.title  %>
                      </a>                               
                      </h4>
                      <span class="glyphicon glyphicon-user"></span>              
                      <h5><%= edited_job.company.name %></h5>
                    </div>
                    <div class="header-meta">
                      <span class="location">            
                        <%= edited_job.city.name %>
                      </span>
                      <time datetime="2016-03-10 20:00">
                      Edited at:
                        <%= edited_job.decorated_updated_at %>
                      </time>
                    </div>
                  </header>
                  <footer>
                    <p class="status">
                      <strong>Status:</strong> 
                      <% edited_job.status %>
                    </p>

                    <div class="action-btn">
                      <a href="/admin/jobs/<%= edited_job.id %>/edit" class="btn btn-xs btn-gray">Edit</a>
                      <%= link_to 'Delete', {:action =>'destroy', :id => edited_job.id}, 
                        :confirm =>'Are you sure?', :method =>:delete,:class=>'btn btn-xs btn-danger'
                        %>
                    </div>
                    
                  </footer>
                </div>
              </div>              
              <% end %> 
              <!-- END company detail --> 
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">           
              <%= paginate @edited_jobs %>
            </div>
          </div>
        
        </div>
      </section>
    </main>

<!-- END Main container -->

